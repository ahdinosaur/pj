{
  "name": "pj",
  "version": "0.0.0",
  "description": "pixel jockey",
  "main": "src/server.js",
  "browser": "src/client.js",
  "scripts": {
    "build-client": "browserify . -o src/bundle.js",
    "watch-client": "budo . --dir src --live",
    "start-server": "node .",
    "watch-server": "node-dev .",
    "start": "npm run build-client && npm run start-server",
    "watch": "(npm run watch-client & npm run watch-server)",
    "test": "tape src/node_modules/**/test/*.js"
  },
  "browserify": {
    "transform": []
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahdinosaur/pj.git"
  },
  "keywords": [
    "ndpixel",
    "pixel",
    "jockey",
    "vj",
    "rgb",
    "hsv"
  ],
  "author": "ahdinosaur",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/ahdinosaur/pj/issues"
  },
  "homepage": "https://github.com/ahdinosaur/pj#readme",
  "devDependencies": {},
  "dependencies": {
    "pull-redux": "^1.0.0",
    "pull-stream": "^3.2.0",
    "pull-ws-server": "^1.4.0",
    "redux": "^3.3.1"
  }
}
